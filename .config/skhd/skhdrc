# focus window
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east

# swap
shift + cmd - j : yabai -m window --swap south
shift + cmd - k : yabai -m window --swap north
shift + cmd - h : yabai -m window --swap west
shift + cmd - l : yabai -m window --swap east

# move
ctrl + cmd - j : yabai -m window --warp south
ctrl + cmd - k : yabai -m window --warp north
ctrl + cmd - h : yabai -m window --warp west
ctrl + cmd - l : yabai -m window --warp east

# focus display
ctrl + alt + cmd - left : yabai -m display --focus west
ctrl + alt + cmd - right : yabai -m display --focus east
#
# move to display
shift + ctrl + alt + cmd - left : yabai -m window --display west;\
				  yabai -m display --focus west
shift + ctrl + alt + cmd - right : yabai -m window --display east;\
				   yabai -m display --focus east

# space
alt + cmd - left : yabai -m space --focus prev
alt + cmd - right : yabai -m space --focus next

# move to space
shift + alt + cmd - left : yabai -m window --space prev;\
		     yabai -m space --focus prev
shift + alt + cmd - right : yabai -m window --space next;\
		     yabai -m space --focus next

# ctrl + shift + alt - left : yabai -m space --display west
# ctrl + shift + alt - right : yabai -m space --display east

shift + cmd - c : yabai -m space --create;\
		  sketchybar --reload
shift + cmd - x : yabai -m space --destroy;\
		  sketchybar --reload

alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4 
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
# alt - 7 : yabai -m space --focus 7
# alt - 8 : yabai -m space --focus 8
# alt - 9 : yabai -m space --focus 9
# alt - 0 : yabai -m space --focus 10

shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
# shift + alt - 7 : yabai -m window --space 7
# shift + alt - 8 : yabai -m window --space 8
# shift + alt - 9 : yabai -m window --space 9
# shift + alt - 0 : yabai -m window --space 10

# rotote layout
shift + cmd - r : yabai -m space --rotate 270

# flix axis
shift + cmd - y : yabai -m space --mirror y-axis
shift + cmd - x : yabai -m space --mirror x-axis

# window float
shift + cmd - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# split change
shift + cmd - g : yabai -m window --toggle split

# sticky
shift + cmd - s : yabai -m window --toggle sticky

# fullscreen
shift + cmd - z : yabai -m window --toggle zoom-fullscreen

# equal size
shift + cmd - e : yabai -m space --balance

